<body style="background-color:#598392;margin:150px;">




<h1> Sign Up </h1>
<%= form_with model: @user, url: sign_up_path do |form| %>

<div class="mb-3">
    <%= form.label :email%>
<%= form.text_field :email, class: "form-contorl" %>
    </div>
<div class="mb-3">
        <%= form.label :password%>

    <%= form.password_field :password, class: "form-contorl"   %>
    </div>

    <div class="mb-3">
            <%= form.label :confirm_pass%>

<%= form.password_field :password_confirmation, class: "form-contorl"  %>
    </div>
<%end%>

</body>